{
    "id": "slurm",
    "containers": [
        {
          "id": "controller",
          "type": "service",
          "resources": {
            "cpus": 1,
            "mem": 1024,
            "disk": 1024
          },
          "network_mode": "container",
          "image": "mjstealey/slurm.controller:17.11.5",
          "is_privileged": true
        },
        {
          "id": "worker",
          "type": "service",
          "network_mode": "container",
          "image": "mjstealey/slurm.worker:17.11.5",
          "resources": {
            "cpus": 4,
            "mem": 4096,
            "disk": 4096
          },
          "is_privileged": true,
          "args": [
            "--master", "@master"
          ]
        },
        {
          "id": "submitter",
          "type": "service",
          "resources": {
            "cpus": 2,
            "mem": 2048,
            "disk": 2048
          },
          "network_mode": "host",
          "image": "<SUBMITTER_IMG>",
          "is_privileged": true,
          "ports": [
            {
              "container_port": 10022,
              "protocol": "tcp"
            }
            ],
            "args": [
              "--pools", "osg-flock.grid.iu.edu,@master",
              "--ssh_key", "ssh-rsa ",
              "--ssh_port", "10022",
              "--irods_user", "<USER>",
              "--irods_password", "<PASSWORD>",
              "--irods_host", "scidas-scratch1.clemson.edu",
              "--irods_zone", "scidasZone",
              "--irods_port", "1247"
            ],
            "env": {
                "SCIDAS_URL": "http://scidas-sys.marathon.containerip.dcos.thisdcos.directory:9090"
            }
        }
    ]
}
